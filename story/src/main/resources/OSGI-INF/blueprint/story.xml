<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0 http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0">

	<reference id="commonsPackage" interface="org.soluvas.commons.CommonsPackage" />
	<bean class="org.soluvas.commons.EPackageRegistration" init-method="init" destroy-method="destroy"
		depends-on="commonsPackage">
		<argument ref="blueprintBundleContext"/>
		<argument>
			<list value-type="java.lang.Class">
				<value>com.soluvas.story.schema.SchemaPackage</value>
				<value>com.soluvas.story.StoryPackage</value>
				<value>com.soluvas.story.builtin.BuiltinPackage</value>
			</list>
		</argument>
	</bean>
	
	<reference id="socialSchemaCatalog" interface="org.soluvas.social.schema.SocialSchemaCatalog" />
	
	<bean id="storySchemaFactory" class="com.soluvas.story.schema.impl.SchemaFactoryImpl" factory-method="getInstance" />
	<bean id="storySchemaCatalog" factory-ref="storySchemaFactory" factory-method="createStorySchemaCatalog" />
	<service ref="storySchemaCatalog" auto-export="interfaces" />

	<bean id="storySchemaCatalogXmiTracker" class="com.soluvas.story.util.StorySchemaCatalogXmiTracker">
		<argument ref="socialSchemaCatalog" />
		<argument ref="storySchemaCatalog" />
	</bean>
	<bean class="org.osgi.util.tracker.BundleTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument value="32" />
		<argument ref="storySchemaCatalogXmiTracker" />
	</bean>	

	<service auto-export="interfaces">
		<service-properties>
			<entry key="type" value="eventbus" />
			<entry key="clientId" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="tenantEnv" value="*" />
		</service-properties>
		<bean class="com.google.common.base.Suppliers" factory-method="ofInstance">
			<argument ref="storySchemaCatalogXmiTracker" />
		</bean>
	</service>

</blueprint>
