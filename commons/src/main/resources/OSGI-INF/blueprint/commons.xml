<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://karaf.apache.org/xmlns/shell/v1.1.0 http://karaf.apache.org/xmlns/shell/v1.1.0">

	<bean id="networkExecutor" class="org.soluvas.commons.util.AppUtils" factory-method="newNetworkExecutor"
		destroy-method="shutdown"/>
	<service ref="networkExecutor" auto-export="interfaces" ranking="10">
		<service-properties>
			<entry key="clientId" value="*" />
			<entry key="tenantEnv" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="namespace" value="network" />
		</service-properties>
	</service>
	<bean id="cpuExecutor" class="org.soluvas.commons.util.AppUtils" factory-method="newCpuExecutor"
		destroy-method="shutdown"/>
	<service ref="cpuExecutor" auto-export="interfaces">
		<service-properties>
			<entry key="clientId" value="*" />
			<entry key="tenantEnv" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="namespace" value="cpu" />
		</service-properties>
	</service>

	<bean id="globalEventBus" class="com.google.common.eventbus.AsyncEventBus">
		<argument value="global" />
		<argument ref="networkExecutor" />
	</bean>
	<service ref="globalEventBus" auto-export="all-classes">
		<service-properties>
			<entry key="clientId" value="*" />
			<entry key="tenantEnv" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="namespace" value="" />
		</service-properties>
	</service>
	<bean id="globalEventBusFilter" class="org.osgi.framework.FrameworkUtil" factory-method="createFilter">
		<!-- there is only one eventBus, no more tenantId filter -->
		<argument value="(&amp;(objectClass=com.google.common.base.Supplier)(type=eventbus))" />
	</bean>
	<bean id="globalEventBusSubscriberTracker" class="org.soluvas.commons.EventBusSubscriberTracker">
		<argument ref="globalEventBus" />
	</bean>
	<bean class="org.osgi.util.tracker.ServiceTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument ref="globalEventBusFilter" />
		<argument ref="globalEventBusSubscriberTracker" />
	</bean>

	<reference-list id="subscriberSuppliers"
		interface="com.google.common.base.Supplier" availability="optional"
		filter="(type=eventbus)" />

	<bean id="svcLookup" class="org.soluvas.commons.tenant.OsgiServiceLookup">
		<argument ref="blueprintBundleContext"/>
	</bean>
	<service ref="svcLookup" auto-export="interfaces"/>
	
	<service auto-export="interfaces">
		<bean class="org.soluvas.commons.impl.XmiObjectLoaderFactoryImpl" />
	</service>

	<bean class="org.soluvas.commons.EPackageRegistration" init-method="init" destroy-method="destroy">
		<argument ref="blueprintBundleContext"/>
		<argument value="org.soluvas.commons.CommonsPackage" />
	</bean>

	<bean id="webAddressXmiTracker" class="org.soluvas.commons.ServiceXmiTracker" destroy-method="destroy">
		<argument value="org.soluvas.commons.CommonsPackage" />
		<argument value="org.soluvas.commons.WebAddress" />
	</bean>
	<bean class="org.osgi.util.tracker.BundleTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument value="32" />
		<argument ref="webAddressXmiTracker" />
	</bean>
	
	<bean id="appManifestXmiTracker" class="org.soluvas.commons.ServiceXmiTracker" destroy-method="destroy">
		<argument value="org.soluvas.commons.CommonsPackage" />
		<argument value="org.soluvas.commons.AppManifest" />
	</bean>
	<bean class="org.osgi.util.tracker.BundleTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument value="32" />
		<argument ref="appManifestXmiTracker" />
	</bean>
	
	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
		<command name="emf/pkgls">
			<action class="org.soluvas.commons.shell.EmfPkgLsCommand" />
		</command>
	
		<!-- EventBus -->
		<command name="eventbus/ls">
			<action class="org.soluvas.commons.shell.EventBusLsCommand" />
		</command>
		
		<command name="app/manifest">
			<action class="org.soluvas.commons.shell.AppManifestCommand" />
		</command>
		<command name="app/webaddress">
			<action class="org.soluvas.commons.shell.AppWebAddressCommand" />
		</command>
	</command-bundle>

 </blueprint>
