<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
    	http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
        http://karaf.apache.org/xmlns/shell/v1.1.0 http://karaf.apache.org/xmlns/shell/v1.1.0">

	<cm:property-placeholder persistent-id="org.soluvas.commons" update-strategy="none">
		<cm:default-properties>
			<cm:property name="defaultClientId"				value="tuneeca" />
			<cm:property name="defaultTenantEnv"			value="dev" />
		</cm:default-properties>
	</cm:property-placeholder>

	<bean id="networkExecutor" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
		<argument value="32" />
	</bean>
	<service ref="networkExecutor" auto-export="interfaces">
		<service-properties>
			<entry key="clientId" value="*" />
			<entry key="tenantEnv" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="namespace" value="" />
		</service-properties>
	</service>

	<bean id="globalEventBus" class="com.google.common.eventbus.AsyncEventBus">
		<argument value="global" />
		<argument ref="networkExecutor" />
	</bean>
	<service ref="globalEventBus" auto-export="all-classes">
		<service-properties>
			<entry key="clientId" value="*" />
			<entry key="tenantEnv" value="*" />
			<entry key="tenantId" value="*" />
			<entry key="namespace" value="" />
		</service-properties>
	</service>
	<bean id="globalEventBusFilter" class="org.osgi.framework.FrameworkUtil" factory-method="createFilter">
		<argument value="(&amp;(objectClass=com.google.common.base.Supplier)(tenantId=\*)(type=eventbus))" />
	</bean>
	<bean id="globalEventBusSubscriberTracker" class="org.soluvas.commons.EventBusSubscriberTracker">
		<argument ref="globalEventBus" />
	</bean>
	<bean class="org.osgi.util.tracker.ServiceTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument ref="globalEventBusFilter" />
		<argument ref="globalEventBusSubscriberTracker" />
	</bean>

	<reference-list id="subscriberSuppliers"
		interface="com.google.common.base.Supplier" availability="optional"
		filter="(type=eventbus)" />

	<bean id="svcLookup" class="org.soluvas.commons.tenant.MultitenantServiceLookup">
		<argument ref="blueprintBundleContext"/>
		<argument value="${defaultClientId}"/>
		<argument value="${defaultTenantEnv}"/>
	</bean>
	<service ref="svcLookup" auto-export="interfaces"/>
	
	<service auto-export="interfaces">
		<bean class="org.soluvas.commons.impl.XmiObjectLoaderFactoryImpl" />
	</service>

	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
		<command name="emf/pkgls">
			<action class="org.soluvas.commons.shell.EmfPkgLsCommand" />
		</command>
	
		<!-- EventBus -->
		<command name="eventbus/ls">
			<action class="org.soluvas.commons.shell.EventBusLsCommand" />
		</command>
		
		<command name="app/manifestcat">
			<action class="org.soluvas.commons.shell.AppManifestCatCommand" />
		</command>
	</command-bundle>

	<bean class="org.soluvas.commons.EPackageRegistration" init-method="init" destroy-method="destroy">
		<argument ref="blueprintBundleContext"/>
		<argument value="org.soluvas.commons.CommonsPackage" />
	</bean>

</blueprint>
