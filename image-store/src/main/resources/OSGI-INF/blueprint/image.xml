<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:wicket="http://www.ops4j.org/schema/wicket"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0 http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0">

	<!-- JavaScript helpers -->
	<service auto-export="interfaces">
		<bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
			<property name="alias" value="/static/js/org.soluvas.image"/>
			<property name="path" value="/js"/>
		</bean>
	</service>
	<service auto-export="interfaces">
		<bean class="org.soluvas.web.site.JavaScriptModuleImpl">
			<argument value="org.soluvas.image"/>
			<argument value="org.soluvas.image"/>
		</bean>
	</service>

	<reference-list id="imageRepos" interface="org.soluvas.image.store.ImageRepository" availability="optional"
		filter="(&amp;(tenantId=berbatik)(tenantEnv=dev))" />

	<bean id="imageRs" class="org.soluvas.image.rs.ImageResource">
		<argument ref="imageRepos" />
	</bean>
	<service auto-export="interfaces">
		<service-properties>
			<entry key="clientId" value="berbatik"/>
			<entry key="tenantId" value="berbatik"/>
			<entry key="tenantEnv" value="dev"/>
			<entry key="type" value="jaxrs"/>
			<entry key="address" value="api"/>
		</service-properties>
		<bean class="java.util.ArrayList">
			<argument>
				<list>
					<ref component-id="imageRs"/>
				</list>
			</argument>
		</bean>
	</service>
	<service auto-export="interfaces">
		<bean class="org.soluvas.web.site.JavaScriptModuleImpl">
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="DYNAMIC"/>
		</bean>
	</service>

</blueprint>
