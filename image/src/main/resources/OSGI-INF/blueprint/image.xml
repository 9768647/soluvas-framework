<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<reference id="commonsPackage" interface="org.soluvas.commons.CommonsPackage" />
	<bean class="org.soluvas.commons.EPackageRegistration" init-method="init" destroy-method="destroy"
		depends-on="commonsPackage">
		<argument ref="blueprintBundleContext"/>
		<argument>
			<list value-type="java.lang.Class">
				<value>org.soluvas.image.ImagePackage</value>
			</list>
		</argument>
	</bean>

	<!-- JavaScript helpers -->
	<service auto-export="interfaces">
		<bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
			<property name="alias" value="/static/js/org.soluvas.image"/>
			<property name="path" value="/js"/>
		</bean>
	</service>
	<service auto-export="interfaces">
		<bean class="org.soluvas.web.site.JavaScriptModuleImpl">
			<argument value="org.soluvas.image"/>
			<argument value="org.soluvas.image"/>
		</bean>
	</service>

	<bean id="imageRs" class="org.soluvas.image.rs.ImageResource">
		<argument ref="blueprintBundleContext" />
	</bean>
	<service auto-export="interfaces">
		<service-properties>
			<entry key="clientId" value="*"/>
<!-- 			<entry key="tenantId" value="*"/> -->
			<entry key="tenantEnv" value="*"/>
			<entry key="type" value="jaxrs"/>
			<entry key="address" value="api"/>
		</service-properties>
		<bean class="java.util.ArrayList">
			<argument>
				<list>
					<ref component-id="imageRs"/>
				</list>
			</argument>
		</bean>
	</service>
	<service auto-export="interfaces">
		<bean class="org.soluvas.web.site.JavaScriptModuleImpl">
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="org.soluvas.image/imageConfigs"/>
			<argument value="DYNAMIC"/>
		</bean>
	</service>

	<bean id="imageMgr" class="org.soluvas.image.impl.ImageManagerImpl"/>
	<service ref="imageMgr" auto-export="interfaces"/>

</blueprint>
