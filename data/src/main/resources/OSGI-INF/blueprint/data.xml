<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://karaf.apache.org/xmlns/shell/v1.1.0 http://karaf.apache.org/xmlns/shell/v1.1.0">

	<reference id="commonsPackage" interface="org.soluvas.commons.CommonsPackage" />
	<bean class="org.soluvas.commons.EPackageRegistration" init-method="init" destroy-method="destroy"
		depends-on="commonsPackage">
		<argument ref="blueprintBundleContext"/>
		<argument>
			<list value-type="java.lang.Class">
				<value>org.soluvas.data.DataPackage</value>
			</list>
		</argument>
	</bean>
	
	<bean id="dataPackage" class="org.soluvas.data.impl.DataPackageImpl" factory-method="getInstance"/>

	<bean id="dataCatalogSupplier" class="org.soluvas.commons.AggregatingSupplier"
		destroy-method="destroy">
		<argument ref="dataPackage"/>
		<argument value="DataCatalog"/>
		<argument><list /></argument>
	</bean>
	<service ref="dataCatalogSupplier" auto-export="interfaces">
		<service-properties>
			<entry key="suppliedClass" value="org.soluvas.commons.DataCatalog" />
			<entry key="layer" value="application" />
		</service-properties>
	</service>
	<service auto-export="interfaces">
		<bean factory-ref="dataCatalogSupplier" factory-method="get"/>
	</service>
	<bean id="dataCatalogXmiTracker" class="org.soluvas.commons.SupplierXmiTracker">
		<argument value="org.soluvas.data.DataPackage" />
		<argument value="org.soluvas.data.DataCatalog" />
		<argument ref="dataCatalogSupplier" />
	</bean>
	<bean class="org.osgi.util.tracker.BundleTracker" init-method="open" destroy-method="close">
		<argument ref="blueprintBundleContext" />
		<argument value="32" />
		<argument ref="dataCatalogXmiTracker" />
	</bean>
	
	<bean id="termMgr" class="org.soluvas.data.impl.TermManagerImpl">
		<argument>
			<bean factory-ref="dataCatalogSupplier" factory-method="get"/>
		</argument>
	</bean>
	<service ref="termMgr" auto-export="interfaces"/>

	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
		<command name="kind/ls">
			<action class="org.soluvas.data.shell.KindLsCommand" />
		</command>
		<command name="mixin/ls">
			<action class="org.soluvas.data.shell.MixinLsCommand" />
		</command>
		<command name="term/ls">
			<action class="org.soluvas.data.shell.TermLsCommand" />
		</command>
		<command name="term/attrs">
			<action class="org.soluvas.data.shell.TermKindsCommand" />
		</command>
	</command-bundle>

</blueprint>
